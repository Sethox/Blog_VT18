@model Blog_VT18.Models.TimeSuggestionViewModel

@{
    ViewBag.Title = "SendTimeSuggestion";
}

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    @*@foreach(var item in Model.DateList){
