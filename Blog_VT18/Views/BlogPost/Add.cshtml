@model Blog_VT18.Models.BlogPost
@{
    ViewBag.Title = "Add post";
}

<h2>@Html.DisplayFor(x=> Model.Category.Name)</h2>


@Html.Partial("_AddOrChangeBlogPost")


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Content)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.From)
        </th>
        <th></th>
    </tr>




    @foreach (var item in ViewBag.PostViewBag)
    {
        if (User.IsInRole("User") && item.Hidden == false)
        {
            <tr>
                <td>
                    @item.Title
                </td>
                <td>
                    @item.Content
                </td>
                <td>
                    @item.From.Name
                </td>

                <td>
                    @Html.ActionLink("Open post in new window", "ViewBlogPost", new { id = item.ID })
                </td>
            </tr>
        }
        if (User.IsInRole("Administrator"))
        {
            <tr>
                <td>
                    @item.Title
                </td>
                <td>
                    @item.Content
                </td>
                <td>
                    @item.From.Name
                </td>

                <td>
                    @Html.ActionLink("Open post in new window", "ViewBlogPost", new { id = item.ID })
                </td>

                <td>

                    @if (item.Hidden == false)
                    {
                    @Html.ActionLink("Hide", "HidePost", new { id = item.ID })
                    }
                    @if (item.Hidden == true)
                    {
                    @Html.ActionLink("Show", "HidePost", new { id = item.ID })
                    }

                </td>
            </tr>
        }
    }

</table>
