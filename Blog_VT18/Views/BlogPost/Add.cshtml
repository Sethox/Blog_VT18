@model Blog_VT18.Models.BlogPost
@using Blog_VT18.App_LocalResources;


@{
    ViewBag.Title = Resources.LblAdd;
    
}

<h2>@Resources.LblAdd</h2>


@Html.Partial("_AddOrChangeBlogPost")


<table class="table">
    <tr>
        <th>
            @Resources.LblTitle
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Content)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.From)
        </th>
        <th></th>
    </tr>




    @foreach (var item in ViewBag.PostViewBag) {
        @*<div class="text-success" style="border:solid; margin:auto 20px; padding: 40px">
                   @Html.DisplayNameFor(m => m.Title)
                  <form typeof="textarea">@item.content</form>

            </div>*@
        <tr>
            <td>
                @item.Title
            </td>
            <td>
                @item.Content
            </td>
            <td>
                @item.From.Name
            </td>

            <td>
                @Html.ActionLink("Open post in new window", "ViewBlogPost", new { id = item.ID })
            </td>

            <td>
                @if (User.IsInRole("Administrator"))
                {

                    if (item.Hidden == false)
                    {
                        @Html.ActionLink(Resources.LblHide, "HidePost", new { id = item.ID })
                    }
                    if (item.Hidden == true)
                    {
                        @Html.ActionLink(Resources.LblShow, "HidePost", new { id = item.ID })
                    }
                }


            </td>


            @*@if (User.IsInRole("administrator")) {
                    <td>
                        @Html.ActionLink("edit", "edit", new { id = item.id }) |
                        @Html.ActionLink("details", "details", new { id = item.id }) |
                        @Html.ActionLink("delete", "delete", new { id = item.id })
                    </td>
                }*@
        </tr>
    }

</table>
