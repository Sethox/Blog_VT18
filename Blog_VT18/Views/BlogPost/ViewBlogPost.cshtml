@model Blog_VT18.Models.BlogPost

@{
    ViewBag.Title = "Blogpost";
}
<h2>Blogpost</h2>

    <hr />
    <div>
        @if(Model.File != null && (Model.Filename.EndsWith(".jpg") || Model.Filename.EndsWith(".png") || Model.Filename.EndsWith(".gif") || Model.Filename.EndsWith(".jpeg")))
        {
            <img style=" height: auto;
                         width: 20%" ;
                 src="@Url.Action("show", new { id = Model.ID})" />
        }
        else if (Model.File != null)
        {


            @Html.DisplayNameFor(x=>x.Filename);

        }
    </div>
    <div>
        <dl class="dl-horizontal" style="margin : 10%, 10%">
            <dd class="h2 text-center" style="text-align : center">
                @Html.DisplayFor(model => model.Title)
            </dd>
            <dd class="text-center" style="margin-top : 20px">
                @Html.DisplayTextFor(model => model.Content)
            </dd>
        </dl>
    </div>
    <p>
        @if (User.Identity.Name == Model.From.Email)
        {
            @Html.ActionLink("Edit", "edit", new { id = Model.ID })
        }
        @Html.ActionLink("Back to Start", "Index")
    </p>
