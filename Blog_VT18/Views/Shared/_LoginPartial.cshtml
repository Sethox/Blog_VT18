@using Microsoft.AspNet.Identity
@using Blog_VT18.App_LocalResources;

@if (Request.IsAuthenticated) {
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" })) {
        @Html.AntiForgeryToken()

        <ul class="nav navbar-nav navbar-right">
            <li>
                @Html.ActionLink("Hello " + User.Identity.GetUserName() + "!", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })
            </li>
            @if (User.IsInRole("Administrator")) {
                <li>@Html.ActionLink(Resources.LblRegister, "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>

            }
            <li><a href="javascript:document.getElementById('logoutForm').submit()">@Resources.LblLogOff</a></li>
        </ul>
    }
} else {
    <ul class="nav navbar-nav navbar-right">

        <li>@Html.ActionLink(Resources.LblLogIn, "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
    </ul>
}
